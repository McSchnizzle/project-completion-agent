{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://complete-agent.schema/architecture-analysis.json",
  "title": "Architecture Analysis",
  "description": "Results from architecture pattern analysis",
  "type": "object",
  "required": ["schema_version", "analyzed_at", "dependency_graph", "findings", "metrics"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "analyzed_at": {
      "type": "string",
      "format": "date-time"
    },
    "framework": {
      "type": ["string", "null"]
    },
    "architecture_config": {
      "type": ["string", "null"],
      "description": "Path to architecture.yaml if used"
    },
    "dependency_graph": {
      "type": "object",
      "properties": {
        "nodes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "path": {"type": "string"},
              "type": {"type": "string", "enum": ["component", "page", "api", "util", "hook", "type", "other"]},
              "imports_count": {"type": "integer"},
              "imported_by_count": {"type": "integer"}
            }
          }
        },
        "edges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "from": {"type": "string"},
              "to": {"type": "string"},
              "type": {"type": "string", "enum": ["import", "re-export"]}
            }
          }
        }
      }
    },
    "circular_dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cycle": {"type": "array", "items": {"type": "string"}},
          "severity": {"type": "string", "enum": ["P2", "P3"]}
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["circular_dependency", "god_file", "orphan_file", "missing_error_boundary", "pattern_violation", "missing_validation"]
          },
          "severity": {"type": "string", "enum": ["P2", "P3"]},
          "file": {"type": "string"},
          "message": {"type": "string"},
          "details": {"type": ["object", "null"]}
        }
      }
    },
    "pattern_compliance": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pattern_name": {"type": "string"},
          "compliant_files": {"type": "integer"},
          "non_compliant_files": {"type": "integer"},
          "violations": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "total_files": {"type": "integer"},
        "total_imports": {"type": "integer"},
        "circular_dependency_count": {"type": "integer"},
        "orphan_file_count": {"type": "integer"},
        "god_file_count": {"type": "integer"},
        "average_imports_per_file": {"type": "number"},
        "max_imports_in_file": {"type": "integer"}
      }
    }
  }
}

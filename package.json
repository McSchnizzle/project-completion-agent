{
  "name": "project-completion-agent",
  "version": "0.75.2",
  "description": "A Claude Code skill for auditing web applications for completeness",
  "main": "dist/src/cli.js",
  "types": "dist/src/cli.d.ts",
  "bin": {
    "audit-agent": "dist/src/cli.js"
  },
  "files": [
    "dist/",
    "prompts/",
    "skill/schemas/"
  ],
  "scripts": {
    "build": "tsc",
    "start": "npx tsx src/cli.ts",
    "audit": "npx tsx src/cli.ts audit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude-code",
    "audit",
    "testing",
    "quality-assurance"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@playwright/test": "^1.58.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "yaml": "^2.3.0",
    "zod": "^4.3.6"
  },
  "optionalDependencies": {
    "playwright": "^1.58.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
